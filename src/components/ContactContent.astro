<section
  class="flex flex-col items-center w-full p-4 box-border overflow-hidden"
>
  <h2 class="text-3xl mb-4 text-center sm:text-4xl">Contact</h2>

  <div class="max-w-md mx-auto mb-4">
    <p class="mb-2">Birthdate: October 31 - 1990</p>
    <p class="mb-2">Location: Spain</p>
    <p class="mb-2">Address: Orihuela - Alicante</p>
    <p class="mb-2">Email: Timurnator_@outlook.com</p>
    <p class="mb-2">Phone: 658440125</p>
    <p class="mb-2">Freelancer: Available</p>
  </div>

  <form class="w-full max-w-md mx-auto relative">
    <div class="mb-4">
      <label for="name" class="block text-gray-700 font-bold mb-2"></label>
      <input
        type="text"
        id="name"
        name="name"
        placeholder="Name..."
        class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
      />
    </div>
    <div class="mb-4">
      <label for="email" class="block text-gray-700 font-bold mb-2"></label>
      <input
        type="email"
        id="email"
        name="email"
        placeholder="Email..."
        class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
      />
    </div>
    <div class="mb-4">
      <label for="project" class="block text-gray-700 font-bold mb-2"></label>
      <input
        type="text"
        id="project"
        name="project"
        placeholder="The project is about..."
        class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
      />
    </div>
    <div class="mb-4">
      <label for="budget" class="block text-gray-700 font-bold mb-2"></label>
      <input
        type="text"
        id="budget"
        name="budget"
        placeholder="Budget..."
        class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
      />
    </div>
    <div class="mb-6 relative">
      <label for="message" class="block text-gray-700 font-bold mb-2"></label>
      <textarea
        id="message"
        name="message"
        rows="4"
        placeholder="Message..."
        class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
      ></textarea>
      <button
        type="submit"
        class="absolute bottom-2 right-2 bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="1.5"
          stroke="currentColor"
          class="w-6 h-6"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M6 12L3.269 15.13a2 2 0 11-3.465-2.62A48.068 48.068 0 0112 5.25c2.252 0 4.456.607 6.418 1.715a2 2 0 01-3.465 2.62L18 12m-6 0v7.5m-6 0v7.5"
          ></path>
        </svg>
      </button>
    </div>
  </form>
</section>
