---
import DualLayout from "../layouts/DualLayout.astro";
---

<DualLayout pageName="Contact">
  <section class="grid grid-rows-[auto_1fr_auto] gap-8 w-full h-full flex-grow">
    <!-- CONTENT -->
    <div class="flex items-end justify-center pt-8">
      <div class="w-full max-w-4xl">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 w-full">
          <div class="flex flex-col items-start justify-start">
            <p class="mb-4 text-lg"><strong>Birthdate:</strong> October 31 - 1990</p>
            <p class="mb-4 text-lg"><strong>Location:</strong> Spain</p>
            <p class="mb-4 text-lg"><strong>Address:</strong> Orihuela - Alicante</p>
          </div>
          <div class="flex flex-col items-start justify-start">
            <p class="mb-4 text-lg"><strong>Email:</strong> Timurnator_@outlook.com</p>
            <p class="mb-4 text-lg"><strong>Phone:</strong> +34 658 440 125</p>
            <p class="mb-4 text-lg"><strong>Freelancer:</strong> Available</p>
          </div>
        </div>
      </div>
    </div>
    

    <!-- SUBCONTENT -->
    <div class="flex items-center justify-center">
      <form class="w-full max-w-[22rem] sm:max-w-[28rem] mx-auto relative">
        <div class="mb-6">
          <input
            type="text"
            id="name"
            name="name"
            placeholder="Name..."
            class="shadow appearance-none border rounded w-full py-3 px-4 text-[var(--letter-color)] leading-tight focus:outline-none focus:shadow-outline"
          />
        </div>
        <div class="mb-6">
          <input
            type="email"
            id="email"
            name="email"
            placeholder="Email..."
            class="shadow appearance-none border rounded w-full py-3 px-4 text-[var(--letter-color)] leading-tight focus:outline-none focus:shadow-outline"
          />
        </div>
        <div class="mb-6">
          <input
            type="text"
            id="project"
            name="project"
            placeholder="The project is about..."
            class="shadow appearance-none border rounded w-full py-3 px-4 text-[var(--letter-color)] leading-tight focus:outline-none focus:shadow-outline"
          />
        </div>
        <div class="mb-6">
          <input
            type="text"
            id="budget"
            name="budget"
            placeholder="Budget..."
            class="shadow appearance-none border rounded w-full py-3 px-4 text-[var(--letter-color)] leading-tight focus:outline-none focus:shadow-outline"
          />
        </div>
        <div class="relative">
          <textarea
            id="message"
            name="message"
            rows="4"
            placeholder="Message..."
            class="shadow appearance-none border rounded w-full py-3 px-4 text-[var(--letter-color)] leading-tight focus:outline-none focus:shadow-outline"
          ></textarea>
          <button
            type="submit"
            class="absolute bottom-3 right-3 hover:bg-[var(--total-background)] text-white font-bold py-2 px-3 rounded focus:outline-none focus:shadow-outline cursor-pointer"
          >
            <img
              src="/img/send-mail.png"
              alt="Enviar correo"
              class="w-6 h-6"
            />
          </button>
        </div>
      </form>
    </div>

    <!-- EMPTY SPACE -->
    <div class="pb-8"></div>
  </section>
</DualLayout>
