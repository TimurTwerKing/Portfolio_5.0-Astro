---
const currentPath = Astro.url.pathname;
---
<div class="w-full">
  <nav
    class="
      flex flex-row items-center justify-center text-center
      w-full h-full
      bg-[var(--component-background)] border border-[var(--border-color)]
      h-[3rem] shadow-none rounded-none my-0 mx-0
      md:h-[4.25rem] lg:h-[4.75rem] xl:h-[5.5rem] 2xl:h-[6rem]
      md:shadow-lg
      transition-all duration-300 ease-in-out
    "
  >
    <!-- ABOUT -->
    <a
      href="/about"
      class={[
        "flex flex-col items-center justify-center text-center h-full flex-1 text-[var(--letter-color)] border-r border-[var(--border-color)] text-[0.8rem] sm:text-[0.85rem] md:text-[0.95rem] lg:text-[1rem] xl:text-[0.7rem] 2xl:text-[1.15rem] gap-2 p-3 transition-all duration-300 ease-in-out hover:bg-[var(--hover-bg)] hover:text-[var(--hover-text)] hover:border-[var(--hover-text)]",
        currentPath === "/about" ? "border-b-4 border-[var(--hover-bg)] bg-transparent font-semibold" : ""
      ].join(" ")}
    >
      <img 
        src="/img/about.png" 
        alt="About Icon" 
        class="
          w-8 h-8
          sm:w-[1.6rem] sm:h-[1.6rem]
          md:w-[1.8rem] md:h-[1.8rem]
          lg:w-[2rem] lg:h-[2rem]
          xl:w-8 xl:h-8
          2xl:w-[2.4rem] 2xl:h-[2.4rem]
        " 
      />
      ABOUT
    </a>

    <!-- RESUME -->
    <a
      href="/resume"
      class={[
        "flex flex-col items-center justify-center text-center h-full flex-1 text-[var(--letter-color)] border-r border-[var(--border-color)] text-[0.8rem] sm:text-[0.85rem] md:text-[0.95rem] lg:text-[1rem] xl:text-[0.7rem] 2xl:text-[1.15rem] gap-2 p-3 transition-all duration-300 ease-in-out hover:bg-[var(--hover-bg)] hover:text-[var(--hover-text)] hover:border-[var(--hover-text)]",
        currentPath === "/resume" ? "border-b-4 border-[var(--hover-bg)] bg-transparent font-semibold" : ""
      ].join(" ")}
    >
      <img 
        src="/img/resume.png" 
        alt="Resume Icon" 
        class="
          w-8 h-8
          sm:w-[1.6rem] sm:h-[1.6rem]
          md:w-[1.8rem] md:h-[1.8rem]
          lg:w-[2rem] lg:h-[2rem]
          xl:w-8 xl:h-8
          2xl:w-[2.4rem] 2xl:h-[2.4rem]
        " 
      />
      RESUME
    </a>

    <!-- PROJECTS -->
    <a
      href="/projects"
      class={[
        "flex flex-col items-center justify-center text-center h-full flex-1 text-[var(--letter-color)] border-r border-[var(--border-color)] text-[0.8rem] sm:text-[0.85rem] md:text-[0.95rem] lg:text-[1rem] xl:text-[0.7rem] 2xl:text-[1.15rem] gap-2 p-3 transition-all duration-300 ease-in-out hover:bg-[var(--hover-bg)] hover:text-[var(--hover-text)] hover:border-[var(--hover-text)]",
        currentPath === "/projects" ? "border-b-4 border-[var(--hover-bg)] bg-transparent font-semibold" : ""
      ].join(" ")}
    >
      <img 
        src="/img/projects.png" 
        alt="Projects Icon" 
        class="
          w-8 h-8
          sm:w-[1.6rem] sm:h-[1.6rem]
          md:w-[1.8rem] md:h-[1.8rem]
          lg:w-[2rem] lg:h-[2rem]
          xl:w-8 xl:h-8
          2xl:w-[2.4rem] 2xl:h-[2.4rem]
        " 
      />
      PROJECTS
    </a>

    <!-- CONTACT -->
    <a
      href="/contact"
      class={[
        "flex flex-col items-center justify-center text-center h-full flex-1 text-[var(--letter-color)] text-[0.8rem] sm:text-[0.85rem] md:text-[0.95rem] lg:text-[1rem] xl:text-[0.7rem] 2xl:text-[1.15rem] gap-2 p-3 transition-all duration-300 ease-in-out hover:bg-[var(--hover-bg)] hover:text-[var(--hover-text)] hover:border-[var(--hover-text)]",
        currentPath === "/contact" ? "border-b-4 border-[var(--hover-bg)] bg-transparent font-semibold" : ""
      ].join(" ")}
    >
      <img 
        src="/img/contact.png" 
        alt="Contact Icon" 
        class="
          w-8 h-8
          sm:w-[1.6rem] sm:h-[1.6rem]
          md:w-[1.8rem] md:h-[1.8rem]
          lg:w-[2rem] lg:h-[2rem]
          xl:w-8 xl:h-8
          2xl:w-[2.4rem] 2xl:h-[2.4rem]
        " 
      />
      CONTACT
    </a>
  </nav>
</div>