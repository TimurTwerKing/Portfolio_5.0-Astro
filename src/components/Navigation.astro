---
const currentPath = Astro.url.pathname;
---
<div class="w-full">
  <nav
    class="
      flex flex-row items-center justify-center text-center
      w-full h-full
      bg-[var(--component-background)] border border-[var(--border-color)]
      h-[3rem] shadow-none rounded-none my-0 mx-0
      mobile:h-[3.5rem] tablet:h-[4rem] laptop:h-[4.5rem] fhd:h-[5rem] qhd:h-[5.5rem] uhd:h-[6rem]
      mobile:shadow-md tablet:shadow-lg
      transition-all duration-300 ease-in-out
    "
  >
    <!-- ABOUT -->
    <a
      href="/about"
      class={[
        "flex flex-col items-center justify-center text-center h-full flex-1 text-[var(--letter-color)] border-r border-[var(--border-color)] text-xs mobile:text-sm tablet:text-base laptop:text-lg fhd:text-xl qhd:text-2xl uhd:text-3xl gap-2 p-2 mobile:p-3 tablet:p-4 transition-all duration-300 ease-in-out hover:bg-[var(--hover-bg)] hover:text-[var(--hover-text)] hover:border-[var(--hover-text)]",
        currentPath === "/about" ? "border-b-4 border-[var(--hover-bg)] bg-transparent font-semibold" : ""
      ].join(" ")}
    >
      <img 
        src="/img/about.png" 
        alt="About Icon" 
        class="
          w-6 h-6
          mobile:w-7 mobile:h-7
          tablet:w-8 tablet:h-8
          laptop:w-9 laptop:h-9
          fhd:w-10 fhd:h-10
          qhd:w-12 qhd:h-12
          uhd:w-14 uhd:h-14
        " 
      />
      ABOUT
    </a>

    <!-- RESUME -->
    <a
      href="/resume"
      class={[
        "flex flex-col items-center justify-center text-center h-full flex-1 text-[var(--letter-color)] border-r border-[var(--border-color)] text-xs mobile:text-sm tablet:text-base laptop:text-lg fhd:text-xl qhd:text-2xl uhd:text-3xl gap-2 p-2 mobile:p-3 tablet:p-4 transition-all duration-300 ease-in-out hover:bg-[var(--hover-bg)] hover:text-[var(--hover-text)] hover:border-[var(--hover-text)]",
        currentPath === "/resume" ? "border-b-4 border-[var(--hover-bg)] bg-transparent font-semibold" : ""
      ].join(" ")}
    >
      <img 
        src="/img/resume.png" 
        alt="Resume Icon" 
        class="
          w-6 h-6
          mobile:w-7 mobile:h-7
          tablet:w-8 tablet:h-8
          laptop:w-9 laptop:h-9
          fhd:w-10 fhd:h-10
          qhd:w-12 qhd:h-12
          uhd:w-14 uhd:h-14
        " 
      />
      RESUME
    </a>

    <!-- PROJECTS -->
    <a
      href="/projects"
      class={[
        "flex flex-col items-center justify-center text-center h-full flex-1 text-[var(--letter-color)] border-r border-[var(--border-color)] text-xs mobile:text-sm tablet:text-base laptop:text-lg fhd:text-xl qhd:text-2xl uhd:text-3xl gap-2 p-2 mobile:p-3 tablet:p-4 transition-all duration-300 ease-in-out hover:bg-[var(--hover-bg)] hover:text-[var(--hover-text)] hover:border-[var(--hover-text)]",
        currentPath === "/projects" ? "border-b-4 border-[var(--hover-bg)] bg-transparent font-semibold" : ""
      ].join(" ")}
    >
      <img 
        src="/img/projects.png" 
        alt="Projects Icon" 
        class="
          w-6 h-6
          mobile:w-7 mobile:h-7
          tablet:w-8 tablet:h-8
          laptop:w-9 laptop:h-9
          fhd:w-10 fhd:h-10
          qhd:w-12 qhd:h-12
          uhd:w-14 uhd:h-14
        " 
      />
      PROJECTS
    </a>

    <!-- CONTACT -->
    <a
      href="/contact"
      class={[
        "flex flex-col items-center justify-center text-center h-full flex-1 text-[var(--letter-color)] text-xs mobile:text-sm tablet:text-base laptop:text-lg fhd:text-xl qhd:text-2xl uhd:text-3xl gap-2 p-2 mobile:p-3 tablet:p-4 transition-all duration-300 ease-in-out hover:bg-[var(--hover-bg)] hover:text-[var(--hover-text)] hover:border-[var(--hover-text)]",
        currentPath === "/contact" ? "border-b-4 border-[var(--hover-bg)] bg-transparent font-semibold" : ""
      ].join(" ")}
    >
      <img 
        src="/img/contact.png" 
        alt="Contact Icon" 
        class="
          w-6 h-6
          mobile:w-7 mobile:h-7
          tablet:w-8 tablet:h-8
          laptop:w-9 laptop:h-9
          fhd:w-10 fhd:h-10
          qhd:w-12 qhd:h-12
          uhd:w-14 uhd:h-14
        " 
      />
      CONTACT
    </a>
  </nav>
</div>