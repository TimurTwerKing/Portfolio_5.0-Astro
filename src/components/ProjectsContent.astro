---
import ProjectCard from "../components/ProjectCard.astro";
const projects = await Astro.glob("../content/projects.md");
import DualLayout from "../layouts/DualLayout.astro";
---

<DualLayout pageName="Projects">
  <section class="w-full">
    <!-- CONTENT -->
    <div
      class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-[1.5rem] w-full text-gray-700 flex-grow min-h-0"
    >
      {
        projects[0].frontmatter.projects.map((project: any) => (
          <ProjectCard {...project} />
        ))
      }
    </div>
  </section>
</DualLayout>
