---
import ProjectCard from "../components/ProjectCard.astro";
const projects = await Astro.glob("../content/projects.md");
import DualLayout from "../layouts/DualLayout.astro";
---

<DualLayout pageName="Projects">
  <section class="grid grid-rows-[auto_1fr_auto] gap-4 mobile:gap-6 tablet:gap-8 laptop:gap-10 fhd:gap-12 qhd:gap-16 uhd:gap-20 w-full h-full flex-grow">
    <!-- CONTENT -->
    <div class="flex items-end justify-center pt-4 mobile:pt-6 tablet:pt-8 laptop:pt-10">
      <div
        class="grid grid-cols-1 mobile:grid-cols-2 tablet:grid-cols-2 laptop:grid-cols-3 gap-4 mobile:gap-6 tablet:gap-8 laptop:gap-10 w-full max-w-6xl text-gray-700"
      >
        {
          projects[0].frontmatter.projects.map((project: any) => (
            <ProjectCard {...project} />
          ))
        }
      </div>
    </div>

    <!-- EMPTY SPACE -->
    <div></div>

    <!-- EMPTY SPACE -->
    <div class="pb-4 mobile:pb-6 tablet:pb-8 laptop:pb-10"></div>
  </section>
</DualLayout>
