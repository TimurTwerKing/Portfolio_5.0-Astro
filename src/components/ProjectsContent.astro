---
import ProjectCard from "../components/ProjectCard.astro";
const projects = await Astro.glob("../content/projects.md"); // Importa los datos
---

<section
  class="flex flex-col items-center w-full p-4 box-border overflow-hidden"
>
  <div class="w-full md:w-1/2 pr-4">
    <h2 class="text-3xl mb-4 text-center sm:text-4xl">Proyects</h2>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      {
        projects[0].frontmatter.projects.map(
          (
            project: any // Itera sobre los proyectos
          ) => (
            <ProjectCard {...project} /> // Pasa los datos a la card
          )
        )
      }
    </div>
  </div>
</section>
