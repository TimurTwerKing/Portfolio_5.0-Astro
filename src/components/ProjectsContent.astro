---
import ProjectCard from "../components/ProjectCard.astro";
const projects = await Astro.glob("../content/projects.md");
---

<section
  class="flex flex-col items-center w-full p-4 box-border overflow-hidden gap-4"
>
  <h2 class="text-3xl text-center sm:text-4xl"><strong>Projects</strong></h2>
  <div class="grid grid-cols-1 md:grid-cols-2 gap-4 w-full max-w-3xl">
    {
      projects[0].frontmatter.projects.map((project: any) => (
        <ProjectCard {...project} />
      ))
    }
  </div>
</section>
