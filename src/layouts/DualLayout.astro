---
import Index from "../components/IndexContent.astro";
const { pageName } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script>
      (function () {
        try {
          var themes = ["variant-1", "variant-2", "variant-3"];
          var savedTheme = localStorage.getItem("theme");
          if (savedTheme && themes.includes(savedTheme)) {
            document.documentElement.classList.add(savedTheme);
          } else {
            document.documentElement.classList.add("variant-1");
          }
        } catch (e) {}
      })();
    </script>
    <script src="/js/theme-init.js" is:inline></script>
    <title>{pageName}</title>
    <script src="/js/theme-toggle.js" defer></script>
  </head>

  <body
    data-page={pageName.toLowerCase()}
    class="min-h-screen flex flex-col bg-[var(--total-background)] text-[var(--letter-color)]"
  >
    <main class="flex flex-col lg:flex-row w-full h-screen">
      <!-- SECCIÓN IZQUIERDA - Index Content -->
      <div
        class="hidden lg:flex lg:w-1/2 items-center justify-center
        p-8 lg:p-12 xl:p-16 2xl:p-20
        mt-[10rem]"
      >
        <Index />
      </div>

      <!-- SECCIÓN DERECHA - Page Content -->
      <div
        class="w-full lg:w-1/2 flex flex-col h-full
      p-8 lg:p-12 xl:p-16 2xl:p-20
      mt-[10rem]"
      >
        <!-- Page Title -->
        <div class="flex items-end justify-start">
          <h1
            class="text-4xl md:text-5xl lg:text-6xl font-bold tracking-[0.3rem] md:tracking-[0.5rem] lg:tracking-[0.8rem] whitespace-nowrap"
          >
            <strong>{pageName}</strong>
          </h1>
        </div>

        <!-- Content Area -->
        <div class="flex-grow flex flex-col overflow-hidden">
          <slot />
        </div>
      </div>
    </main>
  </body>
</html>
