---
import Index from "../components/IndexContent.astro";
const { pageName } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script>
      (function () {
        try {
          var themes = ["variant-1", "variant-2", "variant-3"];
          var savedTheme = localStorage.getItem("theme");
          if (savedTheme && themes.includes(savedTheme)) {
            document.documentElement.classList.add(savedTheme);
          } else {
            document.documentElement.classList.add("variant-1");
          }
        } catch (e) {}
      })();
    </script>
    <script src="/js/theme-init.js" is:inline></script>
    <title>{pageName}</title>
    <script src="/js/theme-toggle.js" defer></script>
  </head>

  <body
    data-page={pageName.toLowerCase()}
    class="min-h-screen flex flex-col bg-[var(--total-background)] text-[var(--letter-color)]"
  >
    <main class="flex flex-col laptop:flex-row w-full h-screen">

      <!-- SECCIÓN IZQUIERDA - Index Content -->
      <div
        class="hidden laptop:flex laptop:w-1/2 items-center justify-center
        p-6 mobile:p-8 tablet:p-10 laptop:p-12 fhd:p-16 qhd:p-20 uhd:p-24
        mt-[10rem] mobile:mt-[8rem] tablet:mt-[6rem] laptop:mt-[4rem]"
      >
        <Index />
      </div>

      <!-- SECCIÓN DERECHA - Page Content -->
      <div
        class="w-full laptop:w-1/2 flex flex-col h-full
        p-6 mobile:p-8 tablet:p-10 laptop:p-12 fhd:p-16 qhd:p-20 uhd:p-24
        mt-[10rem] mobile:mt-[8rem] tablet:mt-[6rem] laptop:mt-[4rem]"
      >
        <!-- Page Title -->
        <div class="flex items-end justify-start">
          <h1
            class="text-3xl mobile:text-4xl tablet:text-5xl laptop:text-6xl fhd:text-7xl qhd:text-8xl uhd:text-9xl font-bold 
            tracking-[0.2rem] mobile:tracking-[0.3rem] tablet:tracking-[0.4rem] laptop:tracking-[0.5rem] fhd:tracking-[0.6rem] qhd:tracking-[0.8rem] uhd:tracking-[1rem] 
            whitespace-nowrap"
          >
            <strong>{pageName}</strong>
          </h1>
        </div>
        
        <!-- Content Area -->
        <div class="flex-grow flex flex-col overflow-hidden">
          <slot />
        </div>
      </div>
    </main>
  </body>
</html>
