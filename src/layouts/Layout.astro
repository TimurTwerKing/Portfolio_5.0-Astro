---
import "../styles/global.css";
import Header from "../components/HeaderContent.astro";
import Footer from "../components/FooterContent.astro";

const { pageName } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
      integrity="sha512-9usAa10IRO0HhonpyAIVpjrylPvoDwiPUiKdWk5t3PyolY1cOd4DSE0Ga+ri4AuTroPR5aQvXU9xC6qOPnzFeg=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    <title>{pageName}</title>
  </head>
  <body
    class="xl:p-24 flex flex-col min-h-screen h-screen w-screen m-0 overflow-x-hidden bg-[var(--letter-color-1)]"
  >
    <Header />
    <div class="bg-[var(--page-background-1)]">
      <slot />
    </div>
    <Footer />
  </body>
</html>
