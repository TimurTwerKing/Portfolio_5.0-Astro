---
import "../styles/global.css";
import Header from "../components/HeaderContent.astro";
import Footer from "../components/FooterContent.astro";

const { pageName } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
      integrity="sha512-9usAa10IRO0HhonpyAIVpjrylPvoDwiPUiKdWk5t3PyolY1cOd4DSE0Ga+ri4AuTroPR5aQvXU9xC6qOPnzFeg=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    <link rel="stylesheet" href="/global.css" />
    <title>{pageName}</title>
  </head>
  <body
    class="md:p-8 lg:p-12 xl:p-15 flex flex-col min-h-screen w-screen m-0 overflow-x-hidden justify-between
    text-[var(--letter-color)] bg-[var(--total-background)]"
  >
    <Header />
    <div
      class="bg-[var(--page-background-1)] text-[var(--letter-color)] flex-1 "
    >
      <slot />
    </div>
    <Footer />
  </body>
</html>
